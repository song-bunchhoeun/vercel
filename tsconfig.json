{
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "noUnusedLocals": true /* Error on unused local variables */,
        "noUnusedParameters": true /* Error on unused function parameters */,
        "noImplicitReturns": true /* Ensure every branch in a function returns a value */,
        "noFallthroughCasesInSwitch": true /* Prevent bugs in switch statements */,
        "noImplicitOverride": true /* Ensure 'override' keyword is used in classes */,
        "useUnknownInCatchVariables": true /* Forces you to check the type of 'error' in catch blocks */,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        ".next/dev/types/**/*.ts"
    ],
    "exclude": ["node_modules"]
}
