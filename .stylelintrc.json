{
    "extends": [
        "stylelint-config-standard-scss",
        "stylelint-config-prettier-scss"
    ],
    "customSyntax": "postcss-scss",
    "rules": {
        "selector-class-pattern": null,
        "color-function-notation": "legacy",
        "alpha-value-notation": "number",

        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": [
                    "tailwind",
                    "apply",
                    "layer",
                    "theme",
                    "custom-variant"
                ]
            }
        ]
    }
}
